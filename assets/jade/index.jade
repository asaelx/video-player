doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title Player
        link(rel="stylesheet", type="text/css", href="assets/css/player.css")
    body
        include ../svg/svgdefs.svg
        .player
        
            // Video
            video(poster="https://cdn.selz.com/plyr/1.0/poster.jpg", crossorigin)
                source(type="video/mp4", src="https://cdn.selz.com/plyr/1.0/movie.mp4")
                source(type="video/webm", src="https://cdn.selz.com/plyr/1.0/movie.webm")
                a(href="https://cdn.selz.com/plyr/1.0/movie.mp4") Download
            
            // Player controls
            .player-controls.visible
            
                // Play/Pause
                button.player-play-btn(type="button")
                    svg
                        use(xlink:href="#icon-play")
                        
                // Player information
                span.player-info
                    span.player-info-current-time 00:00
                    |  / 
                    span.player-info-duration-time 00:00
                
                // Player options
                .player-options
                
                    // Player progress
                    .player-progress
                        input.player-seek-slider(type="range", min="0", max="100", step="0.5", value="0")
                        progress.player-progress-bar(min="0", max="100", value="0")
                        progress.player-buffer-bar(min="0", max="100", value="0")
                        
                    
                    // Mute button
                    button.player-mute-btn(type="button")
                        svg
                            use(xlink:href="#icon-volume-up")
                    
                    // PLayer volume slider
                    input.player-volume-slider(type="range", min="0", max="10", step="1", value="5")
                    
                    // Player Fullscreen button
                    button.player-fullscreen-btn(type="button")
                        svg
                            use(xlink:href="#icon-fullscreen-on")
                
        script(type="text/javascript", src="assets/js/min/scripts.min.js")
